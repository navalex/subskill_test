{% extends 'base.html.twig' %}

{% block title %}{{ 'contact.title'|trans ~ parent() }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>{{ 'contact.title' | trans }}</h2>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-2">{{ form_row(form.civility) }}</div>
        <div class="col-5">{{ form_row(form.first_name) }}</div>
        <div class="col-5">{{ form_row(form.last_name) }}</div>
    </div>
    {{ form_widget(form) }}
    <button class="btn btn-primary" type="submit">{{ 'contact.form.send' | trans }}</button>
    {{ form_end(form) }}
</div>
{% endblock %}
