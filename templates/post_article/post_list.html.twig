{% for article in articles %}
    <div class="grid-item col-4 d-none">
        <div class="card mb-4">
            {% if article.image is not empty %}
                <img src="{{ article.image }}" class="card-img-top" alt="{{ article.title }}">
            {% endif %}
            <div class="card-body">
                <h5 class="card-title"><span class="badge badge-{{ article.category_color }}">{{ article.category_name }}</span> {{ article.title }} <small class="text-muted">{{ article.publish_date | ago }}</small></h5>
                <div class="card-text">
                    {{ article.description | truncate(60, true, '...') }}
                </div>
                <a href="{{ path('post_article_show', {'slug': article.slug }) }}" class="btn btn-primary stretched-link">{{ 'post.btn.more' | trans }}</a>
            </div>
        </div>
    </div>
{% endfor %}
