<form method="post" action="{{ path('post_article_delete', {'id': post_article.id}) }}" onsubmit="return confirm('{{ "post.crud.delete_dialog" | trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post_article.id) }}">
    <button class="btn btn-danger btn-block">{{ 'post.crud.delete_btn' | trans }}</button>
</form>
