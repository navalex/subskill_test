{% extends 'base.html.twig' %}

{% block title %}{{ article.title ~ parent() }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="jumbotron pb-4 pt-4">
            <h3><span class="badge badge-{{ article.category.color }}">{{ article.category.name }}</span> {{ article.title }}</h3>
            <p class="text-muted font-italic mb-0">{{ 'post.publish_at' | trans }} {{ article.publishDate | ago }}</p>
            <a href="{{ share_link }}" class="btn btn-info">Partager sur Twitter</a>
        </div>

        <div>{{ article.description }}</div>
    </div>
{% endblock %}
